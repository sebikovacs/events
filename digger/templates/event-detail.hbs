---
title       : {{band.name}}
date: {{ dateFormat band.date format='YYYY-MM-DD HH:mm' }}
dayNo       : {{band.dayNo}}
location    : {{band.location}}
description : {{band.description}}
media       : {{band.media}}
gigsNav     :
{{#each band.filteredGigs}}
-
  linkText: {{linkText}}
  linkHref: {{linkHref}}
{{/each}}
daysNav     : daysNav

---
<div class="span3">
  <ul class="nav nav-tabs nav-stacked">
    {{#each band.daysNav}}
      <li><a href="{{linkHref}}.html">{{linkText}}</a></li>
    {{/each}}
  </ul>
</div>
<div class="span9">
  <h3>Day {{ band.dayNo }} - {{ dateFormat band.date format="Do MMMM YYYY" }}</h3>
  <div class="row-fluid">
    <div class="span3">
      <ul class="unstyled">
        {{#each band.gigsNav}}
        <li>
          {{location}}

          <ul class="unstyled">
            {{#each links}}
              <li><a href="{{link}}.html">{{time}} - {{name}}</a></li>
            {{/each}}
          </ul>
          </li>
        {{/each}}
      </ul>
    </div>
    <div class="span9">
      <h1>{{ band.name }}</h1>
      <iframe
        width="560"
        height="315"
        src="{{band.media}}"
        frameborder="0"
        allowfullscreen>
      </iframe>
      <p>{{ band.description }}</p>
    </div>
  </div>
</div>

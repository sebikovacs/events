---
title: Day {{ day.dayNo }}
gigsNavTemplate:
  gigsNav:
  {{#each day.gigsNav}}
  - location: {{location}}
    nav:
    {{#each links}}
    -
      linkText: {{time}} - {{name}}
      linkHref: event-details/{{link}}
    {{/each}}
  {{/each}}
---
<div class="span3">
  <ul class="nav nav-tabs nav-stacked">
    {{#each day.daysNav}}
      <li><a href="{{linkHref}}.html">{{linkText}}</a></li>
    {{/each}}
  </ul>
</div>
<div class="span9">
  <h3>Day {{ day.dayNo }} - {{dateFormat day.date format="Do MMMM YYYY"}}</h3>
  <div class="row-fluid">
    <div class="span3">
      {{{day.gigsNavTmpl}}}
    </div> <!-- span3 -->
  </div> <!-- row-fluid -->
</div>




